        <TextBox x:Name="tb_Mass" PreviewTextInput="NumericTextBox_PreviewTextInput" HorizontalAlignment="Left" Height="200" Margin="40,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="700" TextChanged="tb_Mass_TextChanged"/>

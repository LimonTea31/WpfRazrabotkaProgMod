        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRazrabotkaProgMod"
        mc:Ignorable="d"
        Title="Задание 1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="628*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="bt_close" Content="Закрыть" HorizontalAlignment="Left" Margin="39,350,0,28" VerticalAlignment="Center"  Width="75" Click="bt_close_Click" FontSize="15"/>
        <Label x:Name="lb_zad" Content="Задание 1:" HorizontalAlignment="Left" Margin="30,24,0,0" VerticalAlignment="Top" FontSize="15" Width="82" Height="31"/>

        <Label x:Name="lb_n" Content="n=" HorizontalAlignment="Left" Margin="180.577,160,0,0" VerticalAlignment="Top" FontSize="15" Grid.Column="1"/>
        <Label x:Name="lb2n" Content="2n!" HorizontalAlignment="Center"
               Margin="211.577,105,376.6,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_n" HorizontalAlignment="Left" Height="23" Margin="217.577,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="58" FontSize="15" Grid.Column="1"/>
        <TextBox x:Name="tb_znachN" HorizontalAlignment="Left" Height="23" Margin="172.577,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="15" IsReadOnly="True" Grid.Column="1"/>

    </Grid>
</Window>
